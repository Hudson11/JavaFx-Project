<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane fx:id="Principal" prefHeight="462.0" prefWidth="682.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ControleListarProdutos">
   <bottom>
      <HBox prefHeight="47.0" prefWidth="574.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="buttonADD" mnemonicParsing="false" onAction="#cadastrarProduto" text="Add">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Img/icons3/if_Add_27831.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="buttonRemove" mnemonicParsing="false" onAction="#removerProduto" text="Remove" textOverrun="WORD_ELLIPSIS">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Img/icons3/if_Remove_27874.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <Button fx:id="buttonEdit" mnemonicParsing="false" onAction="#atualizarProdutos" text="To Edit" textFill="#322e2e">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Img/icons3/if_Settings_27879.png" />
                     </image>
                  </ImageView>
               </graphic></Button>
            <TextField fx:id="textBusca" alignment="CENTER" prefHeight="25.0" prefWidth="286.0" promptText="Id Product" />
            <Button mnemonicParsing="false" onAction="#buscarProduto" text="Search" />
         </children>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <top>
      <TableView fx:id="tabela" prefHeight="415.0" prefWidth="499.0" style="-fx-background-color: silver;" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="tableId" prefWidth="132.0" text="Id" />
          <TableColumn fx:id="tableNome" prefWidth="395.0" text="Name" />
            <TableColumn fx:id="tablePreco" minWidth="0.0" prefWidth="152.0" text="Value R$" />
        </columns>
      </TableView>
   </top>
</BorderPane>
